<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
  <changeSet id="authorities-01" author="mohsin.kerai">
    <createTable remarks="Table to Store User Authorities Information for System Security"
      tableName="authorities">
      <column autoIncrement="true" name="id" type="bigint">
        <constraints nullable="false" primaryKey="true" unique="true"/>
      </column>
      <column name="username" type="varchar(255)">
        <constraints nullable="false" unique="false"/>
      </column>
      <column name="authority" type="varchar(255)">
        <constraints nullable="false"/>
      </column>

      <!--AUDIT COLUMN-->
      <column defaultValueComputed="CURRENT_TIMESTAMP" name="created_on" type="datetime">
        <constraints nullable="false" unique="false"/>
      </column>
      <column defaultValueComputed="CURRENT_TIMESTAMP" name="updated_on" type="datetime">
        <constraints nullable="false" unique="false"/>
      </column>
      <column defaultValueComputed="null" name="created_by" type="varchar(255)">
        <constraints nullable="true" unique="false"/>
      </column>
      <column defaultValueComputed="null" name="updated_by" type="varchar(255)">
        <constraints nullable="true" unique="false"/>
      </column>
    </createTable>
  </changeSet>
  <changeSet id="authorities-02" author="mohsin.kerai">
    <addForeignKeyConstraint baseTableName="authorities" baseColumnNames="username"
      constraintName="authorities_username_fk"
      referencedTableName="users" referencedColumnNames="username" />
  </changeSet>
  <changeSet id="authorities-03" author="mohsin.kerai">
    <createIndex tableName="authorities" indexName="authorities_username_index" unique="false">
      <column name="username" />
    </createIndex>
  </changeSet>
</databaseChangeLog>